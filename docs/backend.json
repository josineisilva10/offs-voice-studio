{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the VozGenius platform.",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "The first name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "The last name of the user."
        },
        "whatsAppNumber": {
          "type": "string",
          "description": "The user's WhatsApp number for contact purposes."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "creditBalance": {
          "type": "number",
          "description": "The user's current credit balance."
        }
      },
      "required": [
        "firstName",
        "lastName",
        "whatsAppNumber",
        "email",
        "creditBalance"
      ]
    },
    "VoiceActor": {
      "title": "VoiceActor",
      "type": "object",
      "description": "Represents a voice actor available on the platform.",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri"
        },
        "styleTags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isOnline": {
          "type": "boolean"
        },
        "estimatedDeliveryTime": {
          "type": "string"
        },
        "biography": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "avatarUrl",
        "styleTags",
        "isOnline",
        "estimatedDeliveryTime",
        "biography"
      ]
    },
    "RecordingOrder": {
      "title": "RecordingOrder",
      "type": "object",
      "description": "Represents a recording order placed by a user.",
      "properties": {
        "userId": {
          "type": "string"
        },
        "voiceActorId": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "Off",
            "Produzida"
          ]
        },
        "style": {
          "type": "string",
          "enum": [
            "Abertura",
            "Comercial",
            "Chamada para festa",
            "Vinhetas"
          ]
        },
        "locutionStyle": {
          "type": "string",
          "enum": [
            "Padrão",
            "Impacto",
            "Varejo",
            "Jovem"
          ]
        },
        "otherLocutionStyle": {
          "type": "string"
        },
        "script": {
          "type": "string"
        },
        "estimatedDurationSeconds": {
          "type": "number"
        },
        "creditsUsed": {
          "type": "number"
        },
        "referenceAudioUrl": {
          "type": "string",
          "format": "uri"
        },
        "status": {
          "type": "string",
          "enum": [
            "Aguardando entrega",
            "Em produção",
            "Concluído"
          ]
        },
        "orderDate": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "voiceActorId",
        "title",
        "type",
        "style",
        "locutionStyle",
        "script",
        "estimatedDurationSeconds",
        "creditsUsed",
        "status",
        "orderDate"
      ]
    },
    "CreditPackage": {
      "title": "CreditPackage",
      "type": "object",
      "description": "Represents a credit package that users can purchase.",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "creditAmount": {
          "type": "number"
        },
        "price": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "packageType": {
          "type": "string",
          "enum": [
            "Office",
            "Produzida"
          ]
        }
      },
      "required": [
        "id",
        "title",
        "creditAmount",
        "price",
        "description",
        "packageType"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profiles, including their credit balance and personal information."
    },
    "/voice_actors/{voiceActorId}": {
      "schema": {
        "$ref": "#/entities/VoiceActor"
      },
      "description": "Stores profiles and details for each voice actor."
    },
    "/users/{userId}/orders/{orderId}": {
      "schema": {
        "$ref": "#/entities/RecordingOrder"
      },
      "description": "Stores the recording orders placed by a specific user."
    },
    "/credit_packages/{packageId}": {
      "schema": {
        "$ref": "#/entities/CreditPackage"
      },
      "description": "Lists all available credit packages for purchase."
    }
  }
}
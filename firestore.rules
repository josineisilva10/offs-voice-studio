rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Use request.auth.token.email for security rules, not request.auth.email
      return isSignedIn() && request.auth.token.email == 'josineisilva2@gmail.com';
    }

    match /users/{userId} {
      allow read, create: if isOwner(userId);
      // Admin can update user profiles (e.g., to add credits)
      allow update: if isOwner(userId) || isAdmin();
      // Only admin can delete users for now
      allow delete: if isAdmin();
      // Admin needs list access to find users by email
      allow list: if isAdmin();
    }

    match /voice_actors/{voiceActorId} {
      allow read: if isSignedIn();
      // Only admin can create, update, or delete voice actors
      allow write: if isAdmin();
    }
    
    match /credit_packages/{packageId} {
      allow read: if isSignedIn();
      // Only admin can manage credit packages
      allow write: if isAdmin();
    }

    match /users/{userId}/orders/{orderId} {
      // A user can manage their own orders
      allow read, create, update: if isOwner(userId);
      // A user can delete their own orders (if needed), admin can too
      allow delete: if isOwner(userId) || isAdmin();
    }

    // New top-level collection for all orders, for admin access
    match /all-orders/{orderId} {
        // Admin can read any individual order and list all of them
        allow get, list: if isAdmin();
        // Admin can update the status or details of any order
        allow update, delete: if isAdmin();
        // No one should create directly here, it's done via a transaction
        allow create: if isSignedIn();
    }
  }
}

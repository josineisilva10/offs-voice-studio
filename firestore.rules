rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "josineisilva2@gmail.com";
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------
    
    // A coleção de usuários ainda pode ser útil para dados de perfil no futuro.
    // As regras atuais permitem que um usuário gerencie apenas seu próprio documento.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      // Proibir listagem e exclusão por clientes.
      allow list, delete: if false; 
    }

    // Coleção global de pedidos.
    match /orders/{orderId} {
      // O admin pode fazer qualquer coisa com qualquer pedido.
      allow read, list, create, update, delete: if isAdmin();
      
      // Um usuário comum (cliente) pode:
      // - Ler um pedido se o 'userId' no documento corresponder ao seu UID.
      // - Listar (consultar) apenas os pedidos que pertencem a ele.
      // - Criar um pedido se o 'userId' no novo documento for o seu próprio UID.
      allow get: if isOwner(request.resource.data.userId);
      allow list: if isSignedIn() && request.query.where.size() > 0 && request.query.where[0].field == 'userId' && request.query.where[0].value == request.auth.uid;
      allow create: if isOwner(request.resource.data.userId);
      
      // Clientes não podem atualizar ou excluir pedidos diretamente.
      allow update, delete: if false;
    }
    
    // Coleção de pacotes permanece pública para leitura, mas bloqueada para escrita.
    match /packages/{packageId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
